{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "strictPropertyInitialization": false,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts", "types.d.ts"],
  "exclude": ["node_modules"],
  "files": ["types.d.ts"]
}
